{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".contentlayer/**"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {}
  }
}
